/* Site dimensions and colors */

main_width = 100%;
min_width = 200px;



/* Main construction */

html {
	width: 100%;
	height: 100%;
	overflow: auto;
}

body {
	margin: 0;
	padding: 0;
	font-size: 0.8em;
	font-family: Arial, sans-serif;
}

#main {
	width: main_width;
	min-width: min_width;
	margin: auto;
}


#header {
	width: 100%;
	border-bottom: black solid 1px;

	& > div {

	}

	h1 {
		float: left;
		margin: 10px 0 10px 20px;
		text-align: right;

		div.description {
			font-size: 0.5em;
			color: grey;
			font-family: "Courier New";
		}
	}

	#login-ctnr {
		float: right;
		margin: 20px 20px 10px 0;
	}
}