/* Site dimensions and colors */

main_width = 100%
min_width = 250px
background_color = #33342D
content_background_color = #46483E
title_color = #D2D8BA
title_font = 'New Rocker', cursive
text_color = white
text_grey = #999
text_green = #8CC84B
text_red = red
link_color = #777
link_hover_color = #999




/* Main construction */

html, body {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	background: background_color;
	color: text_color;
}

html {
	overflow: auto;
}

body {
	font-size: 0.8em;
	font-family: Arial, sans-serif;
}



.green {
	color: text_green;
}



#main {
	width: main_width;
	min-width: min_width;
	height: 100%;
	margin: auto;
}


#header {
	width: 100%;
	border-bottom: black solid 1px;
	background: content_background_color;

	& > div {

	}

	h1 {
		float: left;
		margin: 10px 0 10px 20px;
		text-align: right;

		a {
			display: block;
			text-decoration: none;
			color: link_color;
		}

		span {
			
			&.title-part {
				display: block;
				font-family: title_font;
			}

			&.description {
				font-size: 0.5em;
				color: grey;
				font-family: "Courier New";
			}
		}
	}

	#login-ctnr {
		float: right;
		margin: 15px 20px 10px 0;
		text-align: right;

		#status {
			margin-bottom: 5px;
			color: text_grey;

			.connected {
				color: text_green;
			}
			.disconnected {
				color: text_red;
			}
		}
	}
}

#content {
	margin: 10px 20px 20px 20px;
	// background: content_background_color;
	color: text_color;

	#menu-ctnr {
		float: left;
		width: 200px;
		margin: 0 20px 10px 0;
	}
	#page-content {
		display: table;
		min-width: 200px;
		padding-bottom: 20px;
	}
}


#concerts {
	.concert {
		h2 {
			padding-bottom: 3px;
			border-bottom: white solid 1px;
		}

		.description {
			font-style: italic;
			color: text_grey;
			margin-bottom: 10px;

			.item {
				font-style: normal;
				color: text_color;
				margin-bottom: 10px;

				span.label {
					display: block;
					float: left;
					width: 100px;
					font-size: 1.1em;
					font-weight: bold;
					color: text_grey;
				}

				span.content {
					display: table;
				}
			}
		}

		.songs-list {
			margin: 0;
			padding: 0;
			list-style: none;

			li {
				margin: 0;
				padding: 0;
				border: text_grey solid 1px;
				border-radius: 2px;
				margin-bottom: 5px;
				cursor: pointer;

				span {
					display: block;
					padding: 5px;
				}
			}
		}
	}
}